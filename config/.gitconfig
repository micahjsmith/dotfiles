    email = micahjsmith@gmail.com
[github]
	user = micahjsmith
[alias]
    a     = add
    au    = add -u
    amend = "!git add -u && git commit --amend --no-edit"
    br   = branch
    ch   = checkout
    co   = commit
    dc   = difftool
    d    = difftool -g
    gr   = grep
    lg   = log --graph --all --full-history --color --abbrev-commit --decorate
    lgp  = log --graph --all --full-history --color --pretty=format:'%C(yellow)%h%Creset%x09%Cblue%d%Creset %s <%an>'
    mtc  = mergetool
    mt   = mergetool --tool=meld
    pr  = "!f() { git fetch -fu ${2:-$(git remote |grep ^upstream || echo origin)} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
    pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
    reco = commit --amend --no-edit
    st   = status
[diff]
    tool = vimdiff
    guitool = meld
[difftool]
    prompt = false
[difftool "vimdiff"]
    # vim will otherwise fail on filenames starting with a '+'
    cmd = vim -d -- "$LOCAL" "$REMOTE"
[branch]
    autosetuprebase = always
[merge]
    tool = vimdiff
    guitool = meld
    conflictstyle = diff3
[mergetool]
    prompt = false
[mergetool "vimdiff"]
    cmd = vim -d -- "$LOCAL" "$MERGED" "$REMOTE"
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output="$MERGED"
[push]
    default = tracking
[core]
    # warn on whitespace issues
    whitespace = trailing-space,space-before-tab
    filemode = false
	excludesfile = ~/.gitignore
[apply]
    # fix whitespace issues in patches
    whitespace = fix
[url "git@github.com:"]
	insteadOf = https://github.com/
[include]
    path = ~/.gitconfig.local
